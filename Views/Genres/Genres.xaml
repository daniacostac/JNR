<UserControl x:Class="JNR.Views.GenresPage.GenresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JNR.Views.Genres"
             xmlns:models="clr-namespace:JNR.Models"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="650"
             Background="Transparent">
    <!-- Ensure UserControl background is transparent to see parent's gradient -->

    <UserControl.DataContext>
        <models:TrackItem>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Define any specific resources here if needed, or use from App.xaml -->
        <FontFamily x:Key="DosisFont">/Fonts/#Dosis</FontFamily>
        <SolidColorBrush x:Key="ItemBackgroundColor" Color="#202330"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="White"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="LightGray"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="10">
        <!-- Add some padding around the content -->
        <ItemsControl ItemsSource="{Binding Genres}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- Adjust ItemWidth and ItemHeight for desired tile size and spacing -->
                    <!-- These values will determine how many tiles fit per row -->
                    <WrapPanel Orientation="Horizontal"
                               ItemWidth="170"
                               ItemHeight="200"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!--
                        This Border is styled to look like the album items in MyAlbums.xaml
                        - Background: #202330 (similar to MyAlbums example)
                        - CornerRadius: 5 (similar to MyAlbums example)
                        - Margin: Adds spacing between tiles
                        - Padding: Adds internal spacing within the tile
                    -->
                    <Border Background="{StaticResource ItemBackgroundColor}"
                            CornerRadius="8"
                            Margin="8"
                            Padding="10"
                            Cursor="Hand">
                        <!-- Optional: Add MouseLeftButtonUp event if you want to handle clicks on a genre -->
                        <!-- MouseLeftButtonUp="GenreTile_MouseLeftButtonUp" -->
                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Image Source="{Binding RepresentativeImageUrl, FallbackValue='/Images/placeholder_album.png'}"
                                   Width="120" Height="120" Stretch="Uniform"
                                   VerticalAlignment="Top" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding Name}"
                                       Foreground="{StaticResource PrimaryTextColor}"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       FontFamily="{StaticResource DosisFont}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       MaxWidth="130"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>