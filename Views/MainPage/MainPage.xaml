<Window x:Class="JNR.Views.MainPage.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JNR.Views.MainPage"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="MainPage"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style TargetType="ListBoxItem" x:Key="NoHighlightListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styles for Window Control Buttons (Minimize/Close) -->
        <Style TargetType="Button" x:Key="WindowControlButtonBase" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="MinimizeButtonStyle" BasedOn="{StaticResource WindowControlButtonBase}">
            <Setter Property="Content" Value=""/>
            <!-- Minimize icon -->
            <Setter Property="Background" Value="#FF4E72B8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6889CA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="CloseButtonStyle" BasedOn="{StaticResource WindowControlButtonBase}">
            <Setter Property="Content" Value=""/>
            <!-- Close icon -->
            <Setter Property="Background" Value="IndianRed"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightCoral"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>


    <Viewbox Stretch="Uniform">
        <Border CornerRadius="10" Background="Transparent">
            <Border CornerRadius="10"
                    BorderThickness="1"
                    Opacity="1">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#462AD8" Offset="0"/>
                        <GradientStop Color="#DA34A3" Offset="0.75"/>
                        <GradientStop Color="#8A16C1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#100E1E" Offset="0"/>
                        <GradientStop Color="#141228" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>



                <Grid Width="800" Height="450">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <!-- Col 0: Sidebar area -->
                        <ColumnDefinition Width="470"/>
                        <!-- Col 1: Main Content Area (Search box, Results List) -->
                        <ColumnDefinition Width="*"/>
                        <!-- Col 2: Remaining space, used for window controls -->
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <!-- Top Bar area -->
                        <RowDefinition Height="*"/>
                        <!-- Content below top bar -->
                    </Grid.RowDefinitions>


                    <DockPanel Grid.Column="1" Grid.Row="0" Margin="5,0,10,0" VerticalAlignment="Center" LastChildFill="True">
                        <Border CornerRadius="15" Background="#21212F" VerticalAlignment="Center" Height="30">
                            <TextBox x:Name="txtSearchAlbum"
                                     Tag="Enter album or artist name..."
                                     Text=""
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="White"
                                     FontSize="8" 
                                     VerticalAlignment="Center"
                                     Padding="10,5"
                                     Style="{StaticResource SearchTextBoxStyle}">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="15"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Border>
                    </DockPanel>

                    <!-- Window Control Buttons -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button Style="{StaticResource MinimizeButtonStyle}" Click="MinimizeButton_Click" Margin="0,0,5,0"/>
                        <Button Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click"/>
                    </StackPanel>


                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Welcome"
                               VerticalAlignment="Center"
                               FontWeight="Light"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               Margin="0, 0, 0, 0"
                               FontSize="20"
                               FontFamily="/Fonts/#Dosis"/>


                    <StackPanel Grid.Column="0" Grid.Row="1">
                        <RadioButton Content="My Albums" Height="50" Tag="/Images/folder.png" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}" Checked="MyAlbumsRadioButton_Checked"/>
                        <RadioButton Content="Genres" Height="50" Tag="/Images/headphones.png" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}" Checked="GenresRadioButton_Checked"/>
                        <RadioButton Content="Charts" Height="50" Tag="/Images/list.png" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}" Checked="ChartsRadioButton_Checked"/>
                        <RadioButton Content="About" Height="50" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}" Checked="AboutRadioButton_Checked"/>
                        <RadioButton Content="Settings" Height="50" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}"/>
                        <RadioButton Content="Links" Height="50" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}"/>
                    </StackPanel>


                    <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent" Margin="0,0,10,0">
                        <Grid Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="lblResultsTitle"
                                       Text="{Binding MainContentTitle}"
                                       Grid.Row="0"
                                       Foreground="AliceBlue"
                                       FontSize="13"
                                       FontFamily="/Fonts/#Dosis"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       FontWeight="Light"
                                       FontStyle="Italic"
                                       Margin="5,15,0,5"/>


                            <ListBox x:Name="searchResultsList"
                                     Grid.Row="1"
                                     ItemsSource="{Binding SearchResults}"
                                     ItemContainerStyle="{StaticResource NoHighlightListBoxItem}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     BorderBrush="Transparent" 
                                     Background="#161823">
                                <ListBox.Template>
                                    <ControlTemplate TargetType="ListBox">
                                        <Border x:Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8" 
                                                SnapsToDevicePixels="True"
                                                ClipToBounds="True">
                                            <ScrollViewer Padding="{TemplateBinding Padding}" Focusable="False">
                                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </ScrollViewer>
                                        </Border>
                                    </ControlTemplate>
                                </ListBox.Template>
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type local:MainPageSearchResultItem}">
                                        <StackPanel Orientation="Horizontal" Margin="5" Background="Transparent"
                                                    MouseLeftButtonUp="AlbumSearchResult_Click" Cursor="Hand">
                                            <Image Source="{Binding CoverArtUrl, FallbackValue='/Images/placeholder_album.png'}" 
                                                   Width="60" Height="60" Stretch="Uniform" VerticalAlignment="Top"/>
                                            <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding AlbumName}"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="350"/>
                                                <TextBlock Text="{Binding ArtistName}"
                                                           Foreground="LightGray"
                                                           FontSize="11"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="350"
                                                           Margin="0,2,0,0"/>
                                                <TextBlock Foreground="DarkGray" 
                                                           FontSize="10" 
                                                           FontStyle="Italic"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="350"
                                                           Margin="0,2,0,0">
                                                     <Run Text="Year: "/>
                                                     <Run Text="{Binding ReleaseYear, TargetNullValue='N/A'}"/>
                                                     <Run Text=", Genre: "/>
                                                     <Run Text="{Binding PrimaryGenre, TargetNullValue='N/A'}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1" Grid.Row="0"
                            Margin="0,0,15,0" 
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="15"
                            Height="15"
                            Click="btnSearchAlbum_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Source="/Images/search.png" Stretch="Fill"/>
                    </Button>

                    <Image Margin="10,14,0,0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                           Height="20" Width="20" Source="/Images/SideBarIcons/folder-user.png" Stretch="Fill" IsHitTestVisible="False"/>
                    <Image Margin="10,64,0,0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                           Source="/Images/SideBarIcons/radio.png" Height="20" Width="20" Stretch="Fill" IsHitTestVisible="False"/>
                    <Image Margin="10,113,0,0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                           Source="/Images/SideBarIcons/rows-plus-top.png" Width="20" Height="20" Stretch="Fill" IsHitTestVisible="False"/>
                    <Image Margin="10,164,0,0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                           Height="20" Width="20" Source="/Images/SideBarIcons/question.png" Stretch="Fill" IsHitTestVisible="False"/>
                    <Image Margin="10,214,0,0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                           Source="/Images/SideBarIcons/gear.png" Height="20" Width="20" Stretch="Fill" IsHitTestVisible="False"/>
                    <Image Margin="10,265,0,0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                           Height="20" Width="20" Source="/Images/SideBarIcons/link.png" Stretch="Fill" IsHitTestVisible="False"/>
                </Grid>
            </Border>
        </Border>
    </Viewbox>
</Window>