<Window x:Class="JNR.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JNR.Views"
        xmlns:controls="clr-namespace:JNR.Views.Controls"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">


    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/bg.jpg"/>
        </Border.Background>
        <Border CornerRadius="10"
            BorderThickness="1"
            Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34A3" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#0d112c" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="LOG IN"
                               Foreground="DarkGray"
                               FontSize="10"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10, 0, 0, 0"/>

                    <controls:MinimizeButton Grid.Column="1"
                                             HorizontalAlignment="Right"
                                             VerticalAlignment="Top"
                                             Margin="0, 5, 0, 0"/>

                    <controls:CloseButton Grid.Column="2"
                                             HorizontalAlignment="Right"
                                             VerticalAlignment="Top"
                                             Margin="0, 5, 0, 0"/>


                </Grid>

                <StackPanel Width="250"
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="0, 35, 0, 0">
                    <Image Source="/Images/logo.png"
                           Width="100" Height="100"
                           VerticalAlignment="Top"/>

                    <TextBlock Text="JamNRate"
                               Foreground="White"
                               FontSize="25"
                               FontWeight="Light"
                               FontFamily="/Fonts/#Dosis"
                               TextAlignment="Center"/>
                    <TextBlock Text="Let everyone know how cool your music taste is"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Light"
                               FontFamily="/Fonts/#Dosis"
                               TextAlignment="Center"
                               Margin="0, 5, 0, 0"
                               TextWrapping="Wrap"/>

                    <TextBlock Text="Username"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Light"
                               FontFamily="/Fonts/#Dosis"
                               Margin="0, 35, 0, 0"
                               TextWrapping="Wrap"/>

                    <TextBox x:Name="txbUsername"
                             FontSize="13"
                             FontWeight="Light"
                             FontFamily="/Fonts/#Dosis"
                             BorderBrush="DarkGray"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderThickness="0, 0, 0, 1"
                             VerticalContentAlignment="Center"
                             Height="28"
                             Margin="0, 5, 0, 0"
                             Padding="20, 0, 0, 0">

                        <TextBox.Background>
                            <ImageBrush ImageSource="pack://application:,,,/Images/user-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </TextBox.Background>

                    </TextBox>

                    <TextBlock Text="Password"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Light"
                               FontFamily="/Fonts/#Dosis"
                               Margin="0, 35, 0, 0"
                               TextWrapping="Wrap"/>

                    <PasswordBox x:Name="txbPassword"
                             FontSize="13"
                             FontWeight="Light"
                             FontFamily="/Fonts/#Dosis"
                             BorderBrush="DarkGray"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderThickness="0, 0, 0, 1"
                             VerticalContentAlignment="Center"
                             Height="28"
                             Margin="0, 5, 0, 0"
                             Padding="20, 0, 0, 0">

                        <PasswordBox.Background>
                            <ImageBrush ImageSource="pack://application:,,,/Images/key-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>

                    <Button x:Name="btnLogin"
                            BorderThickness="0"
                            Content="Log In"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Light"
                            FontFamily="/Fonts/#Dosis"
                            Cursor="Hand"
                            Grid.Column="2"
                            Margin="0, 50, 0, 0">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Pink"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" 
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0, 15, 0, 0">
                        <TextBlock Text="Forgot Password?"
                               Foreground="Gray"
                               FontSize="12"
                               FontWeight="Light"
                               FontFamily="Fonts/#Dosis"
                               Margin="0, 5, 0, 0"
                               TextWrapping="Wrap"/>

                        <TextBlock Text="Reset"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Light"
                               FontFamily="Fonts/#Dosis"
                               Margin="10, 5, 0, 0"
                               Cursor="Hand"
                               TextWrapping="Wrap"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0, 5, 0, 0">
                        <TextBlock Text="Don't have an account?"
                               Foreground="Gray"
                               FontSize="12"
                               FontWeight="Light"
                               FontFamily="Fonts/#Dosis"
                               Margin="0, 0, 0, 0"
                               TextWrapping="Wrap"/>

                        <TextBlock Text="Sign up"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Light"
                               FontFamily="Fonts/#Dosis"
                               Margin="10, 0, 0, 0"
                               Cursor="Hand"
                               MouseDown="SignUp_Click"
                               TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>
