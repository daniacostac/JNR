<Window x:Class="JNR.Views.Charts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JNR.Views"
        xmlns:converters="clr-namespace:JNR.Converters"
        mc:Ignorable="d"
        Title="Charts - JNR"
        WindowStyle="None"
        ResizeMode="CanResize" 
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowState="Normal"
        Width="1050" Height="768">

    <Window.Resources>
        <!-- Using global converters from App.xaml -->
        <!-- <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/> -->
        <!-- <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/> -->

        <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
        <FontFamily x:Key="TitleFont">/Fonts/#Dosis</FontFamily>
        <SolidColorBrush x:Key="LightTextColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="MediumTextColor" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="DarkTextColor" Color="#808080"/>
        <SolidColorBrush x:Key="AccentColorBlue" Color="#FF4E72B8"/>

        <Style TargetType="ListBoxItem" x:Key="NoHighlightListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="DecadeButtonStyle">
            <Setter Property="Background" Value="#2A3045"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3A4055"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="70"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A4055"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentColorBlue}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentColorBlue}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <!-- Add a trigger for "IsSelected" if using ToggleButtons or RadioButtons bound to SelectedDecade -->
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="Transparent">
        <Border CornerRadius="10" BorderThickness="1">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34A3" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#100E1E" Offset="0"/>
                    <GradientStop Color="#141228" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Viewbox Stretch="Uniform">
                <Grid Width="1050" Height="768">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title Area -->
                    <TextBlock Text="Charts"
                               Grid.Column="0" Grid.Row="0"
                               VerticalAlignment="Center" FontWeight="Light" FontSize="22"
                               HorizontalAlignment="Center" Foreground="{StaticResource LightTextColor}"
                               FontFamily="{StaticResource TitleFont}"/>

                    <!-- Custom Title Bar Buttons (Minimize/Close) -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0">
                        <Button Content="_" Width="25" Height="25" Margin="0,0,5,0" Background="#FF4E72B8" Foreground="White" Click="MinimizeButton_Click"/>
                        <Button Content="X" Width="25" Height="25" Background="IndianRed" Foreground="White" Click="CloseButton_Click"/>
                    </StackPanel>

                    <!-- Sidebar Navigation -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,20,0,0">
                        <RadioButton Content="My Albums" Height="50" Tag="/Images/SideBarIcons/folder-user.png" Foreground="White" FontSize="14" Style="{StaticResource MainButtonTheme}" Click="SidebarNavigation_Click" CommandParameter="MyAlbums"/>
                        <RadioButton Content="Genres" Height="50" Tag="/Images/SideBarIcons/radio.png" Foreground="White" FontSize="14" Style="{StaticResource MainButtonTheme}" Click="SidebarNavigation_Click" CommandParameter="Genres"/>
                        <RadioButton Content="Charts" IsChecked="True" Tag="/Images/SideBarIcons/rows-plus-top.png" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MainButtonTheme}"/>
                        <RadioButton Content="About" Height="50" Tag="/Images/SideBarIcons/question.png" Foreground="White" FontSize="14" Style="{StaticResource MainButtonTheme}" Click="SidebarNavigation_Click" CommandParameter="About"/>
                        <RadioButton Content="Settings" Height="50" Tag="/Images/SideBarIcons/gear.png" Foreground="White" FontSize="14" Style="{StaticResource MainButtonTheme}" Click="SidebarNavigation_Click" CommandParameter="Settings"/>
                        <RadioButton Content="Links" Height="50" Tag="/Images/SideBarIcons/link.png" Foreground="White" FontSize="14" Style="{StaticResource MainButtonTheme}" Click="SidebarNavigation_Click" CommandParameter="Links"/>
                        <Button Content="Back to Search" Height="40" Margin="10,20,10,0" Background="#303040" Foreground="White" Click="GoToSearch_Click"/>
                    </StackPanel>

                    <!-- Main Content Area for Charts -->
                    <Grid Grid.Row="1" Grid.Column="1" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Decade Filters -->
                            <RowDefinition Height="Auto"/>
                            <!-- Title/Status -->
                            <RowDefinition Height="*"/>
                            <!-- Album List -->
                        </Grid.RowDefinitions>

                        <!-- Decade Filters -->
                        <TextBlock Text="Filter by Decade:" Grid.Row="0" Foreground="{StaticResource MediumTextColor}" Margin="0,0,0,5"/>
                        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,20,0,10">
                            <ItemsControl ItemsSource="{Binding Decades}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}" 
                                                Style="{StaticResource DecadeButtonStyle}"
                                                Command="{Binding DataContext.SelectDecadeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Title / Status -->
                        <TextBlock Text="{Binding ChartTitle, FallbackValue='Popular Albums'}"
                                   Grid.Row="1" FontSize="18" FontWeight="Bold"
                                   Foreground="{StaticResource LightTextColor}" Margin="0,10,0,10"/>

                        <!-- Loading Indicator -->
                        <TextBlock Text="Loading popular albums..." Grid.Row="2"
                                   Foreground="LightSkyBlue" FontSize="16"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- No Results Message -->
                        <TextBlock Text="{Binding NoResultsMessage, FallbackValue='No albums found for this selection.'}" Grid.Row="2"
                                   Foreground="{StaticResource MediumTextColor}" FontSize="16"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"
                                   Visibility="{Binding ShowNoResultsMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Album List -->
                        <ListBox Grid.Row="2" ItemsSource="{Binding DisplayedPopularAlbums}"
                                 Background="Transparent" BorderThickness="0"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ItemContainerStyle="{StaticResource NoHighlightListBoxItem}"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1A2035" CornerRadius="5" Padding="10" Margin="5" Width="280" Height="90" Cursor="Hand"
                                            MouseLeftButtonUp="Album_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{Binding CoverArtUrl, FallbackValue='/Images/placeholder_album.png'}"
                                                   Width="70" Height="70" Stretch="Uniform" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding AlbumName}" FontWeight="Bold" Foreground="{StaticResource LightTextColor}" MaxWidth="180" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding ArtistName}" Foreground="{StaticResource MediumTextColor}" FontSize="11" MaxWidth="180" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding ReleaseYear, TargetNullValue='Year: N/A', FallbackValue='Year: N/A'}" Foreground="{StaticResource DarkTextColor}" FontSize="10" FontStyle="Italic"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                    <Image Margin="10,84,100,614" 
                        Grid.Row="1" 
                        Source="/Images/SideBarIcons/radio.png" 
                        Height="20"
                        Width="20"
                        Stretch="Fill"/>
                    <Image Margin="10,133,100,565"
                        Grid.Row="1" 
                        Source="/Images/SideBarIcons/rows-plus-top.png" 
                        Width="20"
                        Height="20"
                        Stretch="Fill"/>
                    <Image Margin="10,184,100,514" 
                        Grid.Row="1" 
                        Height="20"
                        Width="20"
                        Source="/Images/SideBarIcons/question.png" 
                        Stretch="Fill"/>
                    <Image Margin="10,234,100,464"
                        Grid.Row="1" 
                        Source="/Images/SideBarIcons/gear.png" 
                        Height="20"
                        Width="20"
                        Stretch="Fill"/>
                    <Image Margin="10,285,100,413" 
                        Grid.Row="1" 
                        Height="20"
                        Width="20"
                        Source="/Images/SideBarIcons/link.png"
                        Stretch="Fill"/>
                    <Image Margin="10,34,100,664"
                        Grid.Row="1" 
                        Source="/Images/SideBarIcons/folder-user.png"
                        Height="20"
                        Width="20"
                        Stretch="Fill"/>
                </Grid>
            </Viewbox>
        </Border>
    </Border>
</Window>
