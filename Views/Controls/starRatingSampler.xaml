            </Grid>

            <!-- Star 5 -->
            <Grid x:Name="Star5Grid" Width="30" Height="30">
                <Path x:Name="Star5Left" Data="M12,2 L12,17 6,21 8,14 2,9 9,9 Z"
                      Fill="Gray" Stroke="Transparent" StrokeThickness="1"
                      MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" MouseLeftButtonDown="Star_MouseLeftButtonDown"/>
                <Path x:Name="Star5Right" Data="M12,2 L15,9 22,9 16,14 18,21 12,17 Z"
                      Fill="Gray" Stroke="Transparent" StrokeThickness="1"
                      MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" MouseLeftButtonDown="Star_MouseLeftButtonDown"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>