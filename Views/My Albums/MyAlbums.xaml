<!-- Archivo: Views\My Albums\MyAlbums.xaml -->
<Window x:Class="JNR.Views.My_Albums.MyAlbums"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JNR.Views.My_Albums"
        mc:Ignorable="d"
        Title="My Albums - JNR"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <!-- Copied Window.Resources from MainPage if needed, or define specific ones for MyAlbums -->
    <Window.Resources>
        <!-- Add any specific resources for MyAlbums.xaml here -->
        <!-- Example:
        <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
        <SolidColorBrush x:Key="LightTextColor" Color="#E0E0E0"/>
        -->
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Border CornerRadius="10" Background="Transparent">
            <Border CornerRadius="10"
                    BorderThickness="1"
                    Opacity="1">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#462AD8" Offset="0"/>
                        <GradientStop Color="#DA34A3" Offset="0.75"/>
                        <GradientStop Color="#8A16C1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#100E1E" Offset="0"/>
                        <GradientStop Color="#141228" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!-- This Grid will be 800x450 at design time and will be scaled by the Viewbox -->
                <Grid Width="800" Height="450">
                    <Grid.ColumnDefinitions>
                        <!-- Define columns similar to MainPage if you want the same sidebar layout -->
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                        <!-- Add more columns if needed for MyAlbums content -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <!-- Define rows similar to MainPage if you want a top bar -->
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Placeholder for Top Bar Content (e.g., Title, Search) -->
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="My Albums"
                               VerticalAlignment="Center"
                               FontWeight="Light"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="20"
                               FontFamily="/Fonts/#Dosis"/>

                    <!-- You might want a back button here like in Overview.xaml -->
                    <!-- Example:
                    <Button Content="Back"
                            Grid.Column="1" Grid.Row="0" 
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            Margin="10,0,0,0" Padding="10,5"
                            Click="BtnGoBack_Click" />
                    -->


                    <!-- Placeholder for Sidebar Content (e.g., Navigation RadioButtons) -->
                    <StackPanel Grid.Column="0" Grid.Row="1">
                        <!-- Replicate RadioButtons from MainPage or make them specific to MyAlbums context -->
                        <!-- Ensure the "My Albums" RadioButton is checked by default here, or handle navigation differently -->
                        <RadioButton Content="My Albums" IsChecked="True" Height="50" Tag="/Images/folder.png" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}"/>
                        <RadioButton Content="Genres" Height="50" Tag="/Images/headphones.png" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}"/>
                        <RadioButton Content="Charts" Height="50" Tag="/Images/list.png" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}"/>
                        <RadioButton Content="About" Height="50" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}"/>
                        <RadioButton Content="Settings" Height="50" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}"/>
                        <RadioButton Content="Links" Height="50" Foreground="White" FontSize="12" Style="{StaticResource MainButtonTheme}"/>
                        <!-- Add actual images for the sidebar if needed, similar to MainPage -->
                        <!-- ... more images ... -->
                    </StackPanel>


                    <!-- Main Content Area for MyAlbums -->
                    <Border Grid.Column="1" Grid.Row="1" Background="Transparent" Margin="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Content for 'My Albums' goes here."
                                           Foreground="White"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="20"/>

                                <!-- Add ListViews, Grids, etc., to display user's albums -->
                                <TextBlock Text="You can list saved albums, collections, etc."
                                           Foreground="LightGray"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="20,0,20,20"/>

                                <!-- Example: A placeholder for an album item -->
                                <Border Background="#202330" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Images/magdalenaPlaceHolder.jpg" Width="80" Height="80" Stretch="Uniform"/>
                                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Album Title Example" FontWeight="Bold" Foreground="White" FontSize="16"/>
                                            <TextBlock Text="Artist Name Example" Foreground="LightGray" FontSize="14"/>
                                            <TextBlock Text="Year: 2023, Genre: Rock" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <Border Background="#202330" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Images/atcqPlaceHolder.jpg" Width="80" Height="80" Stretch="Uniform"/>
                                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Another Album" FontWeight="Bold" Foreground="White" FontSize="16"/>
                                            <TextBlock Text="Some Other Artist" Foreground="LightGray" FontSize="14"/>
                                            <TextBlock Text="Year: 2022, Genre: Pop" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    <Image Margin="10,64,100,316" 
                        Grid.Row="1" 
                        Source="/Images/SideBarIcons/radio.png" 
                        Height="20"
                        Width="20"
                        Stretch="Fill"/>
                    <Image Margin="10,113,100,267"
                        Grid.Row="1" 
                        Source="/Images/SideBarIcons/rows-plus-top.png" 
                        Width="20"
                        Height="20"
                        Stretch="Fill"/>
                    <Image Margin="10,164,100,216" 
                        Grid.Row="1" 
                        Height="20"
                        Width="20"
                        Source="/Images/SideBarIcons/question.png" 
                        Stretch="Fill"/>
                    <Image Margin="10,214,100,166"
                        Grid.Row="1" 
                        Source="/Images/SideBarIcons/gear.png" 
                        Height="20"
                        Width="20"
                        Stretch="Fill"/>
                    <Image Margin="10,265,100,115" 
                        Grid.Row="1" 
                        Height="20"
                        Width="20"
                        Source="/Images/SideBarIcons/link.png"
                        Stretch="Fill"/>
                    <Image Margin="10,14,100,366"
                        Grid.Row="1" 
                        Source="/Images/SideBarIcons/folder-user.png"
                        Height="20"
                        Width="20"
                        Stretch="Fill"/>

                    <!-- Add any other elements you had in MainPage's 800x450 Grid if they are relevant -->
                    <!-- For example, if MyAlbums also has a search feature or other common UI parts -->

                </Grid>
            </Border>
        </Border>
    </Viewbox>
</Window>